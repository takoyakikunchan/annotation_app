<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("ririkusu-logo.png", class: "ririkusu-icon"), "/" %>
    
    <%= form_with url:search_songs_path, local: true, method: :get, class: "search-form" do |form| %>
     <%= form.text_field :keyword, placeholder: "アーティスト名・曲名・歌詞のキーワードから曲を探す", class: "search-input" %>
     <button type="submit" class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    <% end %>
 </div>
 <div class ="follow-icon">
   <div class="follow-text">follow</div>
   <div class="insta-icon"><a class="insta_btn" href="https://instagram.com/test29155?igshid=1qk53p882ls3w?ref=badge"><span class="insta"><i class="fab fa-instagram"></i></span> </a></div>
   <div class= "twitter-icon"><a href="https://twitter.com/test18955064?ref_src=twsrc%5Etfw" class="twitter-follow-button" data-show-screen-name="false" data-lang="en" data-show-count="false"><i class="fab fa-twitter-square"></i></a></div>
 </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'ジャンル', "#", class: "genre-list" %></li>
      <li><%= link_to 'アーティスト', "#", class: "artist-list" %></li>
      <li><%= link_to '曲を追加する',new_song_path, class: "addsong-list" %></li>
    </ul>
    <% if user_signed_in? %>
    <ul class='lists-right'>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname"%> </li> 
     <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"  %></li>
    </ul>
     <% else %>
    <ul class='lists-right'>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    </ul>
     <% end %>
  </div>
</header>